#include <stdio.h>
#include <string.h>

int main() {
    char mobile[15];
    int i, valid = 1;

    printf("Enter mobile number: ");
    gets(mobile);

    if (strlen(mobile) != 10)
        valid = 0;

    for (i = 0; mobile[i] != '\0'; i++) {
        if (mobile[i] < '0' || mobile[i] > '9') {
            valid = 0;
            break;
        }
    }

    if (valid)
        printf("Valid mobile number");
    else
        printf("Invalid mobile number");

    return 0;
}
