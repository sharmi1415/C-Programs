#include <stdio.h>

struct Employee {
    int id;
    float salary;
};

int main() {
    struct Employee e[50];
    int n, i, add;

    printf("Enter number of existing records: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter ID and Salary: ");
        scanf("%d %f", &e[i].id, &e[i].salary);
    }

    printf("How many records to add: ");
    scanf("%d", &add);

    for(i = n; i < n + add; i++) {
        printf("Enter ID and Salary: ");
        scanf("%d %f", &e[i].id, &e[i].salary);
    }

    printf("\nUpdated Records:\n");
    for(i = 0; i < n + add; i++) {
        printf("ID: %d  Salary: %.2f\n", e[i].id, e[i].salary);
    }

    return 0;
}
