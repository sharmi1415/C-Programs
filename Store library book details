#include <stdio.h>

struct book {
    int id;
    char title[30];
    char author[20];
};

int main() {
    struct book b;

    printf("Enter book id, title and author: ");
    scanf("%d %s %s", &b.id, b.title, b.author);

    printf("Book ID: %d\nTitle: %s\nAuthor: %s",
           b.id, b.title, b.author);
    return 0;
}
