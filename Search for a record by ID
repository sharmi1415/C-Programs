#include <stdio.h>

struct Student {
    int id;
    char name[20];
};

int main() {
    struct Student s[50];
    int n, i, searchId, found = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter ID and Name: ");
        scanf("%d %s", &s[i].id, s[i].name);
    }

    printf("Enter ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(s[i].id == searchId) {
            printf("Record Found!\nID: %d Name: %s\n", s[i].id, s[i].name);
            found = 1;
            break;
        }
    }

    if(!found)
        printf("Record not found.\n");

    return 0;
}
